begin
	# Using the repeat option: If you hold the remote button, it will run the command after every 2nd receive
	# Sends Volume control information to pianobar
	button = KEY_VOLUMEDOWN
	prog = irexec
	config = echo -n '((' >> /var/tmp/ctl
	repeat = 2
	flags = quit
end
begin
	# Using the repeat option: If you hold the remote button, it will run the command after every 2nd receive
	# Sends Volume control information to pianobar
	button = KEY_VOLUMEUP
	prog = irexec
	config = echo -n '))' >> /var/tmp/ctl
	repeat = 2
	flags = quit
end
