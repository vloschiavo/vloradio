begin
	# PBC button - Go into Power control Mode
	button = KEY_MP3 
	prog = irexec
	config = sudo -iu \\#1000 /home/vloschiavo/src/vloradio/DisplayLCDMessage.py "Entering mode:" "Power Control"
	mode = POWER
	flags = quit 
end
